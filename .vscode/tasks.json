{
    "version": "2.0.0",
    "tasks": [{
            "label": "Build",
            "command": "mix",
            "group": "build",
            "args": [
                "compile"
            ],
            "problemMatcher": [
                "$mixCompileError",
                "$mixCompileWarning"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Run All Tests",
            "command": "mix test",
            "type": "shell",
            "group": "test",
            "problemMatcher": [
                "$mixCompileError",
                "$mixCompileWarning",
                "$mixTestFailure"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        }
    ]
}
